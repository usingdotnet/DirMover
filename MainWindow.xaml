<Window x:Class="UsingDotNET.DirMover.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" FontSize="13"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5" VerticalAlignment="Center">源目录</TextBlock>
            <TextBox Margin="5" Width="200"/>
            <TextBlock Margin="5" VerticalAlignment="Center">目标目录</TextBlock>
            <TextBox Margin="5" Width="200"/>
            <Button Margin="5" Padding="5">映射</Button>
        </StackPanel>
    </Grid>
</Window>
