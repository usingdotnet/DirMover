<Application x:Class="UsingDotNET.DirMover.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converts="clr-namespace:UsingDotNET.DirMover.Converts"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <converts:EnumBooleanConverter x:Key="enumBooleanConverter" />
        <converts:EnumConverter x:Key="enumConverter" />
        <converts:SizeConverter x:Key="sizeConverter" />
        <converts:ExistToBrushConverter x:Key="existToBrushConverter" />
        <Style TargetType="Button">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="60"/>
        </Style>
    </Application.Resources>
</Application>
